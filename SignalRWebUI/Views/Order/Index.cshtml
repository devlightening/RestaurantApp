@model List<SignalRWebUI.Dtos.OrderDtos.ResultOrderDto>

@{
    ViewData["Title"] = "Sipariş Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .order-list-container {
        background: linear-gradient(135deg, rgba(147,197,253,0.08) 0%, rgba(96,165,250,0.08) 100%);
        min-height: 100vh;
        padding: 1.5rem 0;
    }

    .order-list-header {
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(20px);
        border-radius: 10px;
        padding: 1.25rem 1.5rem;
        margin-bottom: 1.25rem;
        border: 1px solid rgba(255,255,255,0.2);
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

    .order-list-title {
        color: #2563eb;
        font-weight: 700;
        margin: 0;
        font-size: 1.5rem;
    }

    .order-list-card {
        background: rgba(255,255,255,0.95);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255,255,255,0.25);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        border-radius: 10px;
        overflow-x: auto;
        transition: all 0.3s ease;
        padding: 0.75rem 1rem;
    }

        .order-list-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 20px 45px rgba(0,0,0,0.15);
        }

    table.order-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 0.5rem;
        font-size: 0.9rem;
        color: #334155;
        min-width: 650px;
    }

        table.order-table thead th {
            background: rgba(59,130,246,0.12);
            color: #1e40af;
            font-weight: 600;
            padding: 0.85rem 1rem;
            text-align: left;
            position: sticky;
            top: 0;
            backdrop-filter: blur(10px);
            border: none;
        }

        table.order-table tbody tr {
            background: rgba(255,255,255,0.85);
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            border-radius: 8px;
            transition: background-color 0.3s ease, transform 0.2s ease;
            cursor: default;
        }

            table.order-table tbody tr:hover {
                background: rgba(59,130,246,0.12);
                transform: scale(1.01);
            }

        table.order-table td {
            padding: 0.75rem 1rem;
            vertical-align: middle;
            border: none;
        }

    .btn-view-details {
        background: #2563eb;
        border: none;
        color: white;
        padding: 6px 14px;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .btn-view-details:hover {
            background: #1e40af;
            text-decoration: none;
        }

    /* Responsive for smaller devices */
    @@media (max-width: 768px) {
        .order-list-container

    {
        padding: 1rem 0;
    }

    table.order-table {
        font-size: 0.8rem;
        min-width: 100%;
    }

    }
</style>

<div class="content order-list-container">
    <div class="container-fluid">
        <div class="order-list-header d-flex justify-content-between align-items-center">
            <h2 class="order-list-title">📦 Sipariş Listesi</h2>
        </div>

        <div class="order-list-card">
            @if (Model != null && Model.Any())
            {
                <table class="order-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Masa No</th>
                            <th>Sipariş Tarihi</th>
                            <th>Toplam Tutar</th>
                            <th>Açıklama</th>
                            <th class="text-center" style="min-width: 120px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderId</td>
                                <td>@order.TableNumber</td>
                                <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@($"{order.TotalOrderPrice:C2}")</td>
                                <td>@order.Description</td>
                                <td class="text-center">
                                    <a href="/Orders/Details/@order.OrderId" class="btn-view-details">
                                        <i class="fa fa-eye"></i> Görüntüle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="product-no-data m-4 text-center" style="font-weight:600; color:#444;">
                    Henüz sipariş bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>
