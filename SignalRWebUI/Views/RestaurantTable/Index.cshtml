@model List<ResultRestaurantTableDto>

@{
    ViewData["Title"] = "Masalar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title"><i class="la la-cutlery"></i> Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card shadow rounded">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <span class="h5 mb-0">Tüm Masalar</span>
                        <a href="/RestaurantTable/CreateRestaurantTable" class="btn btn-light btn-sm">
                            <i class="la la-plus"></i> Yeni Masa Ekle
                        </a>
                    </div>

                    <div class="card-body">
                        @if (Model != null && Model.Count > 0)
                        {
                            <table class="table table-striped table-hover table-bordered text-center align-middle">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Masa Adı</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.RestaurantTableId</td>
                                            <td>@item.TableName</td>
                                            <td>
                                                @if (item.Status)
                                                {
                                                    <span class="badge badge-danger">Dolu</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-success">Boş</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="/RestaurantTable/UpdateRestaurantTable/@item.RestaurantTableId" class="btn btn-outline-primary btn-sm me-2">
                                                    <i class="la la-edit"></i> Güncelle
                                                </a>
                                                <a href="/RestaurantTable/Delete/@item.RestaurantTableId" class="btn btn-outline-danger btn-sm" onclick="return confirm('Bu masayı silmek istediğinize emin misiniz?');">
                                                    <i class="la la-trash"></i> Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-warning text-center">
                                Henüz kayıtlı masa bulunmamaktadır.
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
