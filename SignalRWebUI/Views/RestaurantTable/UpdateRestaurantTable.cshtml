@model UpdateRestaurantTableDto
@{
    ViewData["Title"] = "UpdateRestaurantTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-action="UpdateRestaurantTable" method="post">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Masa Bilgilerini Güncelle</h5>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="RestaurantTableId" />

                            <div class="form-group mb-3">
                                <label for="tablename">Masa Adı</label>
                                <input type="text" class="form-control" asp-for="TableName" id="tablename" placeholder="Masa adını giriniz...">
                                <span asp-validation-for="TableName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label for="status">Durum</label>
                                <select class="form-control" asp-for="Status" id="status">
                                    <option value="true" selected="@Model.Status">Dolu</option>
                                    <option value="false" selected="@(Model.Status == false)">Boş</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <button type="submit" class="btn btn-success me-2">Güncelle</button>
                            <a href="/RestaurantTable/Index" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


