@model CreateRestaurantTableDto
@{
    ViewData["Title"] = "CreateRestaurantTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="CreateRestaurantTable" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Masa Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="tablename">Masa Adı</label>
                                <input type="text" class="form-control" asp-for="TableName" id="tablename" placeholder="Masa Adı Giriniz...">
                                <span asp-validation-for="TableName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="status">Durum</label>
                                <select class="form-control" asp-for="Status" id="status">
                                    <option value="true">Dolu</option>
                                    <option value="false">Boş</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Masa Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
