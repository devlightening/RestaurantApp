@model CreateRestaurantTableDto
@{
    ViewData["Title"] = "CreateRestaurantTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    body {
        color: #000;
    }

    .table-create-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .modern-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .modern-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
        }

    .card-header-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem;
        border: none;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

        .card-header-modern::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .card-header-modern:hover::before {
            left: 100%;
        }

    .page-title-modern {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 2rem;
        text-align: center;
        font-size: 2rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .form-group-modern {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label-modern {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: block;
    }

    .form-control-modern {
        width: 100%;
        border: 2px solid #e8ecf4;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        color: #000;
        appearance: none;
    }

        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
            transform: translateY(-2px);
        }

        .form-control-modern:hover {
            border-color: #667eea;
            background: rgba(255, 255, 255, 1);
        }

    .btn-modern-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        border: none;
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 15px rgba(17, 153, 142, 0.3);
    }

        .btn-modern-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(17, 153, 142, 0.4);
            background: linear-gradient(135deg, #0f7b71 0%, #2ed663 100%);
        }

    .card-body-modern {
        padding: 2rem;
        background: rgba(255, 255, 255, 0.8);
    }

    .card-footer-modern {
        background: rgba(248, 249, 250, 0.8);
        border-top: 1px solid rgba(0, 0, 0, 0.05);
        padding: 1.5rem 2rem;
        text-align: right;
    }

    .validation-error {
        color: #e74c3c;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        font-weight: 500;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(180deg);
        }
    }

    @@media (max-width: 768px) {
        .table-create-container {
            padding: 1rem;
        }

        .page-title-modern {
            font-size: 1.5rem;
        }

        .card-body-modern {
            padding: 1.5rem;
        }
    }
</style>

<div class="table-create-container">
    <div class="container">
        <h4 class="page-title-modern">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-action="CreateRestaurantTable" method="post">
                    <div class="modern-card">
                        <div class="card-header-modern">
                            <h5 class="mb-0">Yeni Masa Ekle</h5>
                        </div>
                        <div class="card-body-modern">
                            <div class="form-group-modern">
                                <label for="tablename" class="form-label-modern">Masa Adı</label>
                                <input type="text" class="form-control form-control-modern" asp-for="TableName" id="tablename" placeholder="Masa Adı Giriniz...">
                                <span asp-validation-for="TableName" class="validation-error"></span>
                            </div>
                            <div class="form-group-modern">
                                <label for="status" class="form-label-modern">Durum</label>
                                <select class="form-control form-control-modern" asp-for="Status" id="status">
                                    <option value="true">Dolu</option>
                                    <option value="false">Boş</option>
                                </select>
                                <span asp-validation-for="Status" class="validation-error"></span>
                            </div>
                        </div>
                        <div class="card-footer-modern">
                            <button type="submit" class="btn btn-modern-success">Masa Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
