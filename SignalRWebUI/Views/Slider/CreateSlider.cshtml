@model CreateSliderDto
@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .slider-form-wrapper {
        background: linear-gradient(135deg,rgba(139,92,246,.08)0%,rgba(236,72,153,.08)100%);
        min-height: 100vh;
        padding: 2.5rem 0;
    }

    .slider-card {
        background: rgba(255,255,255,.95);
        border-radius: 14px;
        box-shadow: 0 20px 40px rgba(0,0,0,.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255,255,255,.25);
        max-width: 720px;
        margin: auto;
        transition: .3s;
    }

        .slider-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 28px 56px rgba(0,0,0,.15);
        }

    .slider-card-header {
        background: linear-gradient(135deg,#8b5cf6 0%,#ec4899 100%);
        color: #fff;
        padding: 1.25rem 2rem;
        border-top-left-radius: 14px;
        border-top-right-radius: 14px;
    }

    .form-label {
        font-weight: 600;
        color: #4b5563;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #8b5cf6;
    }

    .btn-save {
        background: linear-gradient(135deg,#8b5cf6 0%,#ec4899 100%);
        border: none;
        color: #fff;
        font-weight: 600;
        padding: .65rem 1.5rem;
        border-radius: 10px;
        transition: .3s;
        width: 100%;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(139,92,246,.35);
        }
</style>

<div class="slider-form-wrapper">
    <div class="slider-card">
        <div class="slider-card-header">
            <h4 class="mb-0">🎞️ Yeni Slider Kaydı</h4>
        </div>

        <div class="p-4">
            <form asp-action="CreateSlider" method="post">
                <div class="row gy-3">
                    <!-- Başlıklar -->
                    <div class="col-md-4">
                        <label class="form-label">Başlık 1</label>
                        <input asp-for="Title1" class="form-control" placeholder="Örn: Lezzetin Adresi" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Başlık 2</label>
                        <input asp-for="Title2" class="form-control" placeholder="Örn: Taptaze Ürünler" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Başlık 3</label>
                        <input asp-for="Title3" class="form-control" placeholder="Örn: Hemen Sipariş" required />
                    </div>

                    <!-- Açıklamalar -->
                    <div class="col-12">
                        <label class="form-label">Açıklama 1</label>
                        <textarea asp-for="Description1" class="form-control" rows="2"
                                  placeholder="Örn: Geleneksel tatları modern dokunuşlarla sunuyoruz..." required></textarea>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Açıklama 2</label>
                        <textarea asp-for="Description2" class="form-control" rows="2"
                                  placeholder="Örn: Tüm ürünlerimiz günlük ve tazedir..." required></textarea>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Açıklama 3</label>
                        <textarea asp-for="Description3" class="form-control" rows="2"
                                  placeholder="Örn: Online sipariş verin, lezzet kapınıza gelsin..." required></textarea>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn-save">
                        <i class="fa fa-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
