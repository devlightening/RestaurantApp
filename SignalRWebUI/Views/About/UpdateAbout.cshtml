@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<style>
    .card {
        border-radius: 1.5rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        border: none;
        background: #fff;
    }

    .card-header {
        background: linear-gradient(90deg, #36d1c4 0%, #5b86e5 100%);
        color: #fff;
        border-radius: 1.5rem 1.5rem 0 0;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .card-footer {
        border-radius: 0 0 1.5rem 1.5rem;
        background: #f8f9fa;
    }

    .form-label {
        font-size: 1.1rem;
        color: #3a3a3a;
    }

    .form-control-lg {
        border-radius: 0.75rem;
        border: 1.5px solid #e0e0e0;
        transition: border-color 0.2s;
    }

        .form-control-lg:focus {
            border-color: #36d1c4;
            box-shadow: 0 0 0 0.1rem rgba(54, 209, 196, 0.15);
        }

    .btn-info {
        background: linear-gradient(90deg, #36d1c4 0%, #5b86e5 100%);
        border: none;
        border-radius: 0.75rem;
        transition: background 0.2s;
    }

        .btn-info:hover {
            background: linear-gradient(90deg, #5b86e5 0%, #36d1c4 100%);
            color: #fff;
        }
</style>

<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-9">
                <div class="card border-0 shadow-lg rounded-4 mt-4">
                    <div class="card-header bg-gradient bg-info text-white rounded-top-4 py-3 px-4 d-flex align-items-center">
                        <i class="fas fa-edit me-2 fs-5"></i>
                        <h4 class="mb-0">Hakkımızda Yazısı Güncelle</h4>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="AboutId" />

                        <div class="card-body px-4 py-4">
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label fw-bold">📝 Başlık</label>
                                <input type="text" class="form-control form-control-lg" asp-for="Title" placeholder="Örn: Misyonumuz">
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ImageUrl" class="form-label fw-bold">🖼️ Görsel URL</label>
                                <input type="text" class="form-control form-control-lg" asp-for="ImageUrl" placeholder="https://...">
                                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-bold">📄 Açıklama</label>
                                <textarea class="form-control form-control-lg" asp-for="Description" rows="5" placeholder="Güncellenmiş açıklamayı girin..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="card-footer bg-light d-flex justify-content-end px-4 py-3 rounded-bottom-4">
                            <button type="submit" class="btn btn-info btn-lg fw-semibold text-white">
                                <i class="fas fa-save me-1"></i> Güncellemeyi Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


