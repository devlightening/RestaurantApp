@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın.
						</div>

						@if (Model != null && Model.Any())
						{
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">Başlık</th>
										<th scope="col">Açıklama</th>
										<th scope="col">Görsel</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<td>@item.Title</td>
											<td>@item.Description</td>
											<td>
												@if (!string.IsNullOrEmpty(item.ImageUrl))
												{
													<img src="@item.ImageUrl" alt="Görsel" width="80" height="60" class="img-thumbnail" />
												}
												else
												{
													<span class="text-muted">Yok</span>
												}
											</td>
											<td>
												<a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a>
											</td>
											<td>
												<a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Güncelle</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						}
						else
						{
							<div class="alert alert-warning mt-3">Henüz bir "Hakkımızda" bilgisi eklenmemiş.</div>
						}

						<a href="/About/CreateAbout" class="btn btn-outline-primary mt-3">Yeni Hakkımda Yazısı Girişi</a>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>



