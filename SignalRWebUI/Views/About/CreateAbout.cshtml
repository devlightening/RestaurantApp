@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    /* Kart ve başlık stilleri */
    .card {
        border-radius: 1.5rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        border: none;
        background: #fff;
    }

    .card-header {
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        color: #fff;
        border-radius: 1.5rem 1.5rem 0 0;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .card-footer {
        border-radius: 0 0 1.5rem 1.5rem;
        background: #f8f9fa;
    }

    .form-label {
        font-size: 1.1rem;
        color: #3a3a3a;
    }

    .form-control-lg {
        border-radius: 0.75rem;
        border: 1.5px solid #e0e0e0;
        transition: border-color 0.2s;
    }

        .form-control-lg:focus {
            border-color: #4e54c8;
            box-shadow: 0 0 0 0.1rem rgba(78, 84, 200, 0.15);
        }

    .btn-primary {
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        border: none;
        border-radius: 0.75rem;
        transition: background 0.2s;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #8f94fb 0%, #4e54c8 100%);
        }
</style>

<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-9">
                <div class="card border-0 shadow-lg rounded-4 mt-4">
                    <div class="card-header bg-gradient bg-primary text-white rounded-top-4 py-3 px-4 d-flex align-items-center">
                        <i class="fas fa-info-circle me-2 fs-5"></i>
                        <h4 class="mb-0">Yeni Hakkımızda Yazısı Ekle</h4>
                    </div>

                    <form method="post">
                        <div class="card-body px-4 py-4">
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label fw-bold">📝 Başlık</label>
                                <input type="text" class="form-control form-control-lg" asp-for="Title" placeholder="Örn: Biz Kimiz?">
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ImageUrl" class="form-label fw-bold">🖼️ Görsel URL</label>
                                <input type="text" class="form-control form-control-lg" asp-for="ImageUrl" placeholder="https://...">
                                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-bold">📄 Açıklama</label>
                                <textarea rows="5" class="form-control form-control-lg" asp-for="Description" placeholder="Hakkımızda yazısını buraya girin..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="card-footer bg-light d-flex justify-content-end px-4 py-3 rounded-bottom-4">
                            <button type="submit" class="btn btn-primary btn-lg fw-semibold">
                                <i class="fas fa-plus-circle me-1"></i> Yazıyı Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


