@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="text-primary fw-bold mb-0">
                <i class="la la-comments me-2"></i> Müşteri Yorumları
            </h4>
            <a href="/Testimonial/CreateTestimonial/" class="btn btn-outline-primary">
                <i class="la la-plus me-1"></i> Yeni Yorum Ekle
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">Referans Yorum Listesi</h5>
                <small class="text-muted">Aşağıda mevcut tüm müşteri yorumlarını görebilir, düzenleyebilir ya da silebilirsiniz.</small>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                        <thead>
                            <tr>
                                <th style="width: 5%;">#</th>
                                <th>Ad Soyad</th>
                                <th>Ünvan</th>
                                <th>Yorum</th>
                                <th>Fotoğraf</th>
                                <th>Durum</th>
                                <th class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>@item.Title</td>
                                    <td>@item.Comment</td>
                                    <td>
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                            <img src="@item.ImageUrl" alt="Resim" width="50" height="50" class="rounded-circle" />
                                            }
                                            else
                                            {
                                            <span class="text-muted">Yok</span>
                                            }
                                    </td>
                                    <td>
                                            @if (item.Status)
                                            {
                                            <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                            <span class="badge bg-secondary">Pasif</span>
                                            }
                                    </td>
                                    <td class="text-center">
                                        <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-sm btn-outline-success me-1">
                                            <i class="la la-edit"></i> Güncelle
                                        </a>
                                        <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu yorumu silmek istediğinize emin misiniz?');">
                                            <i class="la la-trash"></i> Sil
                                        </a>
                                    </td>
                                </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>