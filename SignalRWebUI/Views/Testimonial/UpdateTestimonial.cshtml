@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content py-4">
    <div class="container-fluid">
        <h4 class="text-primary fw-bold mb-4">
            <i class="la la-edit me-2"></i> Müşteri Yorum Güncelleme
        </h4>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <h5 class="mb-0">Yorum Bilgilerini Düzenle</h5>
                <small class="text-muted">Aşağıdaki alanları güncelleyerek müşteriye ait yorumları düzenleyebilirsiniz.</small>
            </div>

            <form method="post">
                <div class="card-body">
                    <input type="hidden" asp-for="TestimonialId" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold">Müşteri Adı</label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: Ahmet Yılmaz" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-semibold">Müşteri Ünvanı</label>
                        <input asp-for="Title" class="form-control" placeholder="Örn: CEO, XYZ Şirketi" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label fw-semibold">Resim URL</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Comment" class="form-label fw-semibold">Yorum</label>
                        <textarea asp-for="Comment" class="form-control" rows="3" placeholder="Müşteri yorumu giriniz..."></textarea>
                        <span asp-validation-for="Comment" class="text-danger small"></span>
                    </div>
                </div>

                <div class="card-footer bg-white text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="la la-save me-1"></i> Yorumu Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>



