@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .create-booking-container {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .create-booking-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        overflow: hidden;
        transition: all 0.4s ease;
    }

        .create-booking-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 35px 70px rgba(0, 0, 0, 0.15);
        }

    .page-title {
        color: #fff;
        font-size: 2.5rem;
        font-weight: 800;
        text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        margin-bottom: 2.5rem;
        text-align: center;
        position: relative;
    }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(135deg, #ffd700, #ffed4e);
            border-radius: 2px;
        }

        .page-title i {
            color: #ffd700;
            margin-right: 0.5rem;
            animation: bounceIn 2s infinite;
        }

    @@keyframes bounceIn {
        0%, 20%, 40%, 60%, 80%, 100%

    {
        transform: translateY(0);
    }

    10%, 30%, 50%, 70%, 90% {
        transform: translateY(-10px);
    }

    }

    .form-group {
        margin-bottom: 2rem;
        position: relative;
    }

    .form-label {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.8rem;
        font-size: 1rem;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .form-control {
        border: 3px solid #e8f4f8;
        border-radius: 15px;
        padding: 1rem 1.2rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
        position: relative;
        z-index: 1;
    }

        .form-control:focus {
            border-color: #4facfe;
            box-shadow: 0 0 0 0.3rem rgba(79, 172, 254, 0.2);
            background: #ffffff;
            transform: translateY(-3px);
            outline: none;
        }

        .form-control:hover {
            border-color: #87ceeb;
            background: #ffffff;
            transform: translateY(-1px);
        }

    .form-group::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 50px;
        background: linear-gradient(135deg, rgba(79, 172, 254, 0.05), rgba(0, 242, 254, 0.05));
        border-radius: 15px;
        transform: translateY(-50%);
        opacity: 0;
        transition: all 0.3s ease;
        z-index: 0;
    }

    .form-group:hover::before {
        opacity: 1;
    }

    .btn-create {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        border: none;
        color: white;
        font-weight: 700;
        padding: 1rem 2.5rem;
        border-radius: 30px;
        font-size: 1.1rem;
        transition: all 0.4s ease;
        box-shadow: 0 8px 25px rgba(79, 172, 254, 0.3);
        text-transform: uppercase;
        letter-spacing: 1px;
        position: relative;
        overflow: hidden;
    }

        .btn-create::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), transparent);
            transition: all 0.4s ease;
        }

        .btn-create:hover::before {
            left: 100%;
        }

        .btn-create:hover {
            background: linear-gradient(135deg, #00f2fe, #4facfe);
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(79, 172, 254, 0.4);
            color: white;
        }

        .btn-create:active {
            transform: translateY(-2px);
        }

    .card-body {
        padding: 3rem;
        position: relative;
    }

        .card-body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(135deg, #4facfe, #00f2fe);
        }

    .card-footer {
        background: linear-gradient(135deg, #f8f9ff, #e8f4f8) !important;
        border-top: 1px solid rgba(79, 172, 254, 0.1);
        padding: 2rem 3rem;
    }

    .form-control::placeholder {
        color: #a0aec0;
        opacity: 1;
        font-style: italic;
    }

    /* Input animasyonları */
    .form-control[type="date"] {
        color: #495057;
    }

        .form-control[type="date"]::-webkit-calendar-picker-indicator {
            color: #4facfe;
            opacity: 1;
            cursor: pointer;
        }

    /* Number input styling */
    .form-control[type="number"] {
        -moz-appearance: textfield;
    }

        .form-control[type="number"]::-webkit-outer-spin-button,
        .form-control[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .create-booking-container

    {
        padding: 1rem 0;
    }

    .page-title {
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .card-body {
        padding: 2rem 1.5rem;
    }

    .card-footer {
        padding: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-create {
        width: 100%;
        padding: 0.8rem 1.5rem;
        font-size: 1rem;
    }

    }

    /* Form validation styling */
    .form-control.is-invalid {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.15);
    }

    .form-control.is-valid {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.15);
    }
</style>

<div class="create-booking-container">
    <div class="container-fluid">
        <!-- Başlık -->
        <div class="page-title">
            <i class="la la-calendar-plus"></i>Yeni Rezervasyon Girişi
        </div>

        <!-- Form -->
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <form method="post">
                    <div class="create-booking-card">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name" class="form-label">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Adınızı ve soyadınızı giriniz">
                            </div>
                            <div class="form-group">
                                <label for="Phone" class="form-label">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="Phone" placeholder="Telefon numaranız">
                            </div>
                            <div class="form-group">
                                <label for="Mail" class="form-label">Mail Adresi</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail" placeholder="E-posta adresiniz">
                            </div>
                            <div class="form-group">
                                <label for="PersonCount" class="form-label">Kişi Sayısı</label>
                                <input type="number" class="form-control" asp-for="PersonCount" id="PersonCount" min="1" placeholder="Kaç kişilik?">
                            </div>
                            <div class="form-group">
                                <label for="Date" class="form-label">Rezervasyon Tarihi</label>
                                <input type="date" class="form-control" asp-for="Date" id="Date">
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <button type="submit" class="btn-create">
                                <i class="la la-check-circle me-2"></i>Rezervasyon Oluştur
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>