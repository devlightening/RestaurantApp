@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Rezervasyonlar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<!-- Script Referansları -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>

<style>
    .booking-dashboard {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .dashboard-header {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .page-title {
        color: #fff;
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .btn-new-booking {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        border: none;
        color: white;
        font-weight: 600;
        padding: 0.7rem 1.5rem;
        border-radius: 25px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(79, 172, 254, 0.3);
        text-decoration: none;
    }

        .btn-new-booking:hover {
            background: linear-gradient(135deg, #00f2fe, #4facfe);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(79, 172, 254, 0.4);
            color: white;
        }

    .booking-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .card-header {
        background: linear-gradient(135deg, #f8f9ff, #e8ecf4);
        padding: 1.5rem 2rem;
    }

        .card-header h5 {
            color: #333;
            font-weight: 700;
            margin: 0;
            font-size: 1.3rem;
        }

    .table-responsive {
        border-radius: 10px;
        overflow: hidden;
    }

    .modern-table {
        background: white;
    }

        .modern-table thead th {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 1rem 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

        .modern-table tbody td {
            padding: 1rem 0.8rem;
            vertical-align: middle;
            font-size: 0.9rem;
        }

        .modern-table tbody tr:hover {
            background: linear-gradient(135deg, #f8f9ff, #e8ecf4);
            transform: scale(1.01);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .status-badge {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 8px;
        border: 2px solid;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        margin: 0 2px;
    }

    .btn-edit {
        color: #28a745;
        border-color: #28a745;
        background: rgba(40, 167, 69, 0.1);
    }

        .btn-edit:hover {
            background: #28a745;
            color: white;
            transform: scale(1.1);
        }

    .btn-delete {
        color: #dc3545;
        border-color: #dc3545;
        background: rgba(220, 53, 69, 0.1);
    }

        .btn-delete:hover {
            background: #dc3545;
            color: white;
            transform: scale(1.1);
        }

    .empty-state {
        background: linear-gradient(135deg, rgba(79, 172, 254, 0.1), rgba(0, 242, 254, 0.1));
        border: 2px dashed rgba(79, 172, 254, 0.3);
        border-radius: 15px;
        padding: 3rem;
        text-align: center;
        color: #4facfe;
        font-size: 1.1rem;
        font-weight: 500;
        display: none;
    }
</style>

<div class="booking-dashboard">
    <div class="container-fluid">

        <!-- Başlık -->
        <div class="dashboard-header d-flex justify-content-between align-items-center">
            <h4 class="page-title">
                <i class="la la-calendar-check"></i> Rezervasyon İşlemleri
            </h4>
            <a href="/Booking/CreateBooking/" class="btn-new-booking">
                <i class="la la-plus me-1"></i> Yeni Rezervasyon
            </a>
        </div>

        <!-- Kart -->
        <div class="booking-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h5>Rezervasyon Listesi</h5>
                    <small>Bu tablo anlık olarak güncellenir.</small>
                </div>
                <div id="connstatus" class="badge bg-secondary pulse">Bağlantı Yok</div>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table modern-table text-center">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ad Soyad</th>
                                <th>Telefon</th>
                                <th>Mail</th>
                                <th>Kişi Sayısı</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody id="booking-table-body">
                            <!-- SignalR verileri buraya gelecek -->
                        </tbody>
                    </table>
                </div>

                <div class="p-4 empty-state">
                    <i class="la la-calendar-times-o" style="font-size: 3rem; margin-bottom: 1rem; display: block;"></i>
                    Henüz herhangi bir rezervasyon bulunmamaktadır.
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SignalR Script -->
<script type="text/javascript">
    $(document).ready(() => {
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("https://localhost:7000/signalrhub")
            .build();

        connection.start().then(() => {
            $("#connstatus").text("Bağlandı").removeClass("pulse");

            setInterval(async () => {
                try {
                    await connection.invoke("GetBookingList");
                } catch (err) {
                    console.error("GetBookingList error:", err);
                    $("#connstatus").addClass("pulse").text("Hata");
                }
            }, 5000);
        }).catch(err => {
            console.error("SignalR bağlantı hatası:", err);
            $("#connstatus").text("Bağlantı Hatası").addClass("pulse");
        });

        connection.on("ReceiveGetBookingList", data => {
            const tbody = $("#booking-table-body");
            tbody.empty();

            if (data && data.length > 0) {
                $(".empty-state").hide();
                $(".table-responsive").show();

                let count = 0;
                data.forEach(item => {
                    count++;
                    tbody.append(`
                        <tr>
                            <td><strong>${count}</strong></td>
                            <td>${item.name}</td>
                            <td>${item.phone}</td>
                            <td>${item.mail}</td>
                            <td><strong>${item.personCount}</strong></td>
                            <td>${new Date(item.date).toLocaleDateString()}</td>
                            <td><span class="status-badge">Rezervasyon Alındı</span></td>
                            <td>
                                <a href="/Booking/UpdateBooking/${item.bookingId}" class="btn-action btn-edit">
                                    <i class="la la-edit"></i>
                                </a>
                                <a href="/Booking/DeleteBooking/${item.bookingId}" class="btn-action btn-delete" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                    <i class="la la-trash"></i>
                                </a>
                            </td>
                        </tr>
                    `);
                });
            } else {
                $(".table-responsive").hide();
                $(".empty-state").show();
            }
        });
    });
</script>
