@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .booking-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .booking-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .booking-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
        }

    .page-title {
        color: #fff;
        font-size: 2.2rem;
        font-weight: 700;
        text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        margin-bottom: 2rem;
        text-align: center;
        line-height: 1.3;
        word-wrap: break-word;
    }

        .page-title i {
            color: #ffd700;
            margin-right: 0.5rem;
            animation: pulse 2s infinite;
        }

    @@keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }

    }

    .form-label {
        font-weight: 600;
        color: #444;
        margin-bottom: 0.8rem;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
    }

    .form-control {
        border: 2px solid #e8ecf4;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: #fafbfc;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
            background: #fff;
            transform: translateY(-2px);
        }

        .form-control:hover {
            border-color: #c5d0f7;
            background: #fff;
        }

    .btn-update {
        background: linear-gradient(135deg, #ffd700, #ffed4e);
        border: none;
        color: #333;
        font-weight: 600;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .btn-update:hover {
            background: linear-gradient(135deg, #ffed4e, #ffd700);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 215, 0, 0.4);
            color: #222;
        }

    .card-body {
        padding: 2.5rem;
    }

    .card-footer {
        background: linear-gradient(135deg, #f8f9ff, #e8ecf4) !important;
        border-top: 1px solid rgba(102, 126, 234, 0.1);
        padding: 1.5rem 2.5rem;
    }

    .mb-3 {
        margin-bottom: 1.5rem !important;
    }

    /* Input animasyonları */
    .form-group {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .form-control::placeholder {
        color: #a0aec0;
        opacity: 1;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .booking-container

    {
        padding: 1rem 0;
    }

    .page-title {
        font-size: 1.8rem;
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-footer {
        padding: 1rem 1.5rem;
    }

    }
</style>

<div class="booking-container">
    <div class="container-fluid">
        <!-- Başlık -->
        <div class="page-title">
            <i class="la la-edit"></i>Rezervasyonu Güncelle
        </div>

        <!-- Form -->
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <form method="post">
                    <input type="hidden" asp-for="BookingId" />
                    <div class="booking-card">
                        <div class="card-body">
                            <div class="form-group mb-3">
                                <label for="Name" class="form-label">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Adınız ve soyadınız">
                            </div>
                            <div class="form-group mb-3">
                                <label for="Phone" class="form-label">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="Phone" placeholder="Telefon numaranız">
                            </div>
                            <div class="form-group mb-3">
                                <label for="Mail" class="form-label">Mail Adresi</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail" placeholder="E-posta adresiniz">
                            </div>
                            <div class="form-group mb-3">
                                <label for="PersonCount" class="form-label">Kişi Sayısı</label>
                                <input type="number" class="form-control" asp-for="PersonCount" id="PersonCount" min="1" placeholder="Kaç kişi?">
                            </div>
                            <div class="form-group mb-3">
                                <label for="Date" class="form-label">Rezervasyon Tarihi</label>
                                <input type="date" class="form-control" asp-for="Date" id="Date">
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <button type="submit" class="btn-update">
                                <i class="la la-save me-1"></i> Rezervasyonu Güncelle
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>