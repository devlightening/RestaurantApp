@model List<ResultProductDto>

@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@section Styles{
    <style>
        :root {
            --blue-light: #eef4ff;
            --blue: #3b82f6;
            --blue-dark: #1e3a8a;
            --green: #10b981;
            --red: #ef4444;
            --gray-light: #f9fafb;
            --radius: 12px;
        }

        .product-list-container {
            background: var(--blue-light);
            min-height: 100vh;
            padding: 2rem 0;
        }

        .product-list-header {
            background: white;
            border-radius: var(--radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

        .product-list-title {
            color: var(--blue-dark);
            font-weight: 700;
            font-size: 1.5rem;
            margin: 0;
        }

        .product-add-btn {
            background: var(--blue);
            border: none;
            color: white;
            padding: 10px 20px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .product-add-btn:hover {
                background: var(--blue-dark);
                transform: scale(1.03);
                box-shadow: 0 6px 15px rgba(59, 130, 246, 0.3);
            }

        .product-list-card {
            background: white;
            border-radius: var(--radius);
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }

            .product-list-card:hover {
                transform: translateY(-2px);
            }

        .product-card-header {
            background: var(--blue);
            color: white;
            padding: 1rem 1.5rem;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .product-table thead th {
            background: var(--gray-light);
            color: var(--blue-dark);
            font-weight: 600;
            padding: 1rem;
        }

        .product-table tbody tr {
            transition: all 0.2s ease;
        }

            .product-table tbody tr:hover {
                background: #f1f5f9;
            }

        .product-table td {
            padding: 1rem;
            vertical-align: middle;
        }

        .product-status-active {
            background: var(--green);
            color: white;
            padding: 4px 12px;
            border-radius: 999px;
            font-size: 0.875rem;
        }

        .product-status-inactive {
            background: var(--red);
            color: white;
            padding: 4px 12px;
            border-radius: 999px;
            font-size: 0.875rem;
        }

        .product-btn-group {
            display: flex;
            gap: 8px;
            justify-content: center;
        }

        .product-btn-update,
        .product-btn-delete {
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 0.875rem;
            color: white;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .product-btn-update {
            background: var(--green);
        }

            .product-btn-update:hover {
                background: #059669;
                transform: scale(1.05);
            }

        .product-btn-delete {
            background: var(--red);
        }

            .product-btn-delete:hover {
                background: #b91c1c;
                transform: scale(1.05);
            }

        .product-no-data {
            background: #fff7ed;
            color: #92400e;
            padding: 1.5rem;
            border-radius: var(--radius);
            margin: 1rem;
            border: 1px solid #fde68a;
            font-weight: 500;
        }

        .product-price {
            font-weight: 600;
            color: var(--green);
        }
    </style>

}

<div class="content product-list-container">
    <div class="container-fluid">
        <div class="product-list-header d-flex justify-content-between align-items-center">
            <h4 class="product-list-title">🛒 Ürün İşlemleri</h4>
            <a href="/Product/CreateProduct" class="product-add-btn">
                <i class="fa fa-plus"></i> Yeni Ürün
            </a>
        </div>

        <div class="product-list-card">
            <div class="product-card-header">
                <h5 class="mb-0">📋 Ürün Listesi</h5>
            </div>
            <div class="card-body p-0">
                @if (Model != null && Model.Any())
                {
                    <table class="table product-table table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width: 5%;">#</th>
                                <th>Ürün Adı</th>
                                <th>Fiyat</th>
                                <th>Kategori</th>
                                <th>Durum</th>
                                <th class="text-center" style="width: 20%;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductId</td>
                                    <td>@item.ProductName</td>
                                    <td class="product-price">@($"{item.Price:C2}")</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>
                                        @if (item.ProductStatus)
                                        {
                                            <span class="product-status-active">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="product-status-inactive">Pasif</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="product-btn-group justify-content-center">
                                            <a href="/Product/UpdateProduct/@item.ProductId" class="product-btn-update">
                                                <i class="fa fa-edit"></i> Güncelle
                                            </a>
                                            <form asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@item.ProductId" method="post" class="d-inline" onsubmit="return confirm('Bu ürünü silmek istediğinizden emin misiniz?');">
                                                <button type="submit" class="product-btn-delete">
                                                    <i class="fa fa-trash"></i> Sil
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="product-no-data m-4">Hiç ürün bulunamadı.</div>
                }
            </div>
        </div>
    </div>
</div>