@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Sosyal Medya Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="text-primary fw-bold mb-0">
                <i class="la la-share-alt me-2"></i> Sosyal Medya Listesi
            </h4>
            <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-sm btn-outline-primary">
                <i class="la la-plus-circle me-1"></i> Yeni Giriş
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <p class="text-muted mb-4">
                    Sosyal medya bağlantılarını buradan yönetebilirsiniz. Güncelleme ve silme işlemleri alttaki tablodan yapılabilir.
                </p>

                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Bağlantı</th>
                                <th scope="col" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td class="fw-semibold">@item.Title</td>
                                    <td>
                                        <a href="@item.Url" target="_blank" class="text-decoration-none text-primary">
                                            @item.Url
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-sm btn-outline-success me-2">
                                            <i class="la la-edit me-1"></i> Güncelle
                                        </a>
                                        <a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu sosyal medya kaydını silmek istediğinize emin misiniz?');">
                                            <i class="la la-trash me-1"></i> Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
