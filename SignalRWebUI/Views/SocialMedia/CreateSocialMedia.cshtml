@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content py-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="text-primary fw-bold mb-0">
                <i class="la la-plus-circle me-2"></i> Yeni Sosyal Medya Hesabı Ekle
            </h4>
            <a href="/SocialMedia/Index" class="btn btn-sm btn-outline-secondary">
                <i class="la la-arrow-left me-1"></i> Geri Dön
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">Sosyal Medya Bilgileri</h5>
                <small class="text-muted">Yeni bir sosyal medya bağlantısı oluşturmak için lütfen formu eksiksiz doldurun.</small>
            </div>

            <form method="post">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="Title" class="form-label fw-semibold">Başlık</label>
                            <input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Örn: Instagram" required>
                        </div>

                        <div class="col-md-6">
                            <label for="Icon" class="form-label fw-semibold">İkon (FontAwesome class)</label>
                            <input type="text" class="form-control" asp-for="Icon" id="Icon" placeholder="Örn: fab fa-instagram" required>
                            <small class="text-muted">FontAwesome sınıf adı girin (örn: <code>fab fa-facebook</code>)</small>
                        </div>

                        <div class="col-md-12">
                            <label for="Url" class="form-label fw-semibold">Bağlantı (URL)</label>
                            <input type="url" class="form-control" asp-for="Url" id="Url" placeholder="https://www.instagram.com/kullaniciadi" required>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white text-end border-top">
                    <button type="submit" class="btn btn-primary">
                        <i class="la la-check-circle me-1"></i> Sosyal Medya Hesabını Ekle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


