@model CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content py-4">
    <div class="container">
        <h4 class="page-title text-primary fw-bold mb-4">İndirimli Menü Ürün İşlemleri</h4>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <form method="post" class="shadow p-4 rounded bg-white">
                    <h5 class="mb-4 border-bottom pb-2 text-secondary">Yeni İndirimli Menü Ürünü Ekle</h5>

                    <div class="mb-3">
                        <label for="Title" class="form-label fw-semibold">Yemek / Ürün Adı</label>
                        <input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Örn: Izgara Tavuk, Pizza Margherita">
                    </div>

                    <div class="mb-3">
                        <label for="Amount" class="form-label fw-semibold">İndirim Oranı (%)</label>
                        <input type="number" class="form-control" asp-for="Amount" id="Amount" placeholder="Örn: 20">
                    </div>

                    <div class="mb-3">
                        <label for="ImageUrl" class="form-label fw-semibold">Yemek Fotoğrafı (URL)</label>
                        <input type="url" class="form-control" asp-for="ImageUrl" id="ImageUrl" placeholder="https://ornek.com/izgara-tavuk.jpg">
                    </div>

                    <div class="mb-4">
                        <label for="Description" class="form-label fw-semibold">Ürün Açıklaması</label>
                        <textarea class="form-control" asp-for="Description" id="Description" rows="4" placeholder="Ürünün içeriği, porsiyon bilgisi veya özel tarif notları..."></textarea>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-danger btn-lg fw-semibold">
                            <i class="bi bi-plus-circle"></i> Menüye Ekle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
