@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <!-- Sayfa Başlığı -->
        <div class="page-header">
            <h1 class="page-title">➕ Yeni Kategori Ekleme</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <form method="post">
                    <div class="card card-success">
                        <div class="card-body">
                            <div class="text-center mb-4">
                                <div class="card-icon">
                                    <i class="fa fa-plus-circle icon-big"></i>
                                </div>
                                <div class="section-title">Yeni Kategori Bilgileri</div>
                                <p class="text-muted">Ürünlerinizi gruplandırmak için yeni bir kategori oluşturun</p>
                            </div>

                            <div class="form-group">
                                <div class="form-group mt-4">
                                    <label for="categorystatus" class="form-label">
                                        <i class="fa fa-toggle-on"></i> Kategori Durumu
                                    </label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-info-circle"></i>
                                            </span>
                                        </div>
                                        <select class="form-control form-control-lg" asp-for="CategoryStatus" id="categorystatus">
                                            <option value="true">Aktif</option>
                                            <option value="false">Pasif</option>
                                        </select>
                                    </div>
                                    <small class="form-text text-muted">
                                        <i class="fa fa-info"></i> Aktif olarak işaretlenen kategoriler menüde görünür.
                                    </small>
                                </div>
                                <label for="categoryname" class="form-label">
                                    <i class="fa fa-tag"></i> Kategori Adı
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-folder-plus"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control form-control-lg" asp-for="CategoryName" id="categoryname" placeholder="Örn: Ana Yemekler, İçecekler, Tatlılar...">
                                </div>
                                <small id="categoryHelp" class="form-text text-muted">
                                    <i class="fa fa-lightbulb"></i> İpucu: Açıklayıcı ve kısa kategori adları tercih edin. Bu ad müşterileriniz tarafından görülecektir.
                                </small>
                            </div>

                            <!-- Kategori Örnekleri -->
                            <div class="section-group">
                                <h6 class="text-muted mb-3">
                                    <i class="fa fa-examples"></i> Popüler Kategori Örnekleri:
                                </h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="example-categories">
                                            <span class="badge badge-info category-example" onclick="setCategory('Ana Yemekler')">🍽️ Ana Yemekler</span>
                                            <span class="badge badge-info category-example" onclick="setCategory('Başlangıçlar')">🥗 Başlangıçlar</span>
                                            <span class="badge badge-info category-example" onclick="setCategory('İçecekler')">🥤 İçecekler</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="example-categories">
                                            <span class="badge badge-info category-example" onclick="setCategory('Tatlılar')">🍰 Tatlılar</span>
                                            <span class="badge badge-info category-example" onclick="setCategory('Salatalar')">🥙 Salatalar</span>
                                            <span class="badge badge-info category-example" onclick="setCategory('Pizza')">🍕 Pizza</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer text-center">
                            <div class="btn-group" role="group">
                                <button type="submit" class="btn btn-success btn-lg pulse">
                                    <i class="fa fa-save"></i> Kategori Oluştur
                                </button>
                                <a href="/Category/Index" class="btn btn-secondary btn-lg">
                                    <i class="fa fa-arrow-left"></i> Geri Dön
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section styles {
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #7f8c8d;
            --success-color: #27ae60;
            --info-color: #3498db;
            --radius: 12px;
        }

        /* Form kontrolü */
        .form-control {
            border: 1.8px solid #dcdde1;
            border-radius: var(--radius);
            padding: 0.75rem 1.1rem;
            background-color: #ffffffcc;
            font-size: 1rem;
            transition: all 0.25s ease-in-out;
        }

            .form-control:focus {
                border-color: var(--success-color);
                box-shadow: 0 0 0 3px rgba(39, 174, 96, 0.25);
                background-color: #ffffff;
                transform: scale(1.02);
            }

        /* Etiketler */
        .form-label {
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 0.4rem;
            font-size: 1rem;
        }

        /* Input grup metinleri */
        .input-group-text {
            background: linear-gradient(135deg, var(--success-color), #58d68d);
            border: 1.8px solid #dcdde1;
            color: white;
            font-weight: 600;
            border-radius: var(--radius) 0 0 var(--radius);
            padding: 0.6rem 1rem;
            transition: background 0.3s ease;
        }

        /* Kart alt kısmı */
        .card-footer {
            background: #f8f9fa;
            border-top: 1px solid #e0e0e0;
            padding: 1.5rem;
            border-radius: 0 0 var(--radius) var(--radius);
        }

        /* Başarı butonu */
        .btn-success {
            background: linear-gradient(135deg, var(--success-color), #58d68d);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.75rem 2rem;
            border-radius: var(--radius);
            transition: all 0.3s ease-in-out;
            box-shadow: 0 3px 6px rgba(39, 174, 96, 0.2);
        }

            .btn-success:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(39, 174, 96, 0.3);
            }

        /* İkincil buton */
        .btn-secondary {
            background: linear-gradient(135deg, var(--secondary-color), #95a5a6);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.75rem 2rem;
            border-radius: var(--radius);
            transition: all 0.3s ease-in-out;
            box-shadow: 0 3px 6px rgba(127, 140, 141, 0.25);
        }

            .btn-secondary:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 18px rgba(127, 140, 141, 0.4);
            }

        /* Örnek kategoriler */
        .example-categories {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .category-example {
            background: linear-gradient(135deg, var(--info-color), #5dade2);
            color: white;
            padding: 0.5rem 1.2rem;
            border-radius: var(--radius);
            font-weight: 500;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s ease;
            user-select: none;
        }

            .category-example:hover {
                transform: translateY(-2px) scale(1.05);
                box-shadow: 0 4px 15px rgba(52, 152, 219, 0.25);
            }

        /* Bilgi etiketi */
        .badge-info {
            background: linear-gradient(135deg, var(--info-color), #5dade2);
            color: white;
            padding: 0.4rem 1rem;
            border-radius: var(--radius);
            font-weight: 600;
            font-size: 0.9rem;
        }
    </style>
}

<script>
    function setCategory(categoryName) {
        document.getElementById('categoryname').value = categoryName;
        document.getElementById('categoryname').focus();

        // Küçük bir animasyon efekti
        const input = document.getElementById('categoryname');
        input.style.transform = 'scale(1.02)';
        setTimeout(() => {
            input.style.transform = 'scale(1)';
        }, 200);
    }
</script>